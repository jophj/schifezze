<div class="recap card hoverable">
  <div class="card-content">
    <span class="card-title"> {{username}} </span>
    <div class="row">
      
      <div class="col s6">
        <p>Mese:&nbsp;</p>
      </div>
      <div class="col s6">
        <span>{{lastMonthTotalSchifezze|number_format(2, '.', '')}} €</span>
      </div>

      <div class="col s6">
        <p>Persi:&nbsp;</p>
      </div>
      <div class="col s6">
        <span>{{totalSchifezze|number_format(2, '.', '')}} €</span>
      </div>

      <div class="col s6">
        <p>Spesi:&nbsp;</p>
      </div>
      <div class="col s6">
        <span>{{totalPrize|number_format(2, '.', '')}} €</span>
      </div>

      <div class="col s6">
        <p>Rimanenti:&nbsp;</p>
      </div>
      <div class="col s6">
        <span>{{(totalSchifezze - totalPrize)|number_format(2, '.', '')}} €</span>
      </div>

      <div class="col s12">
        <h5></h5>
        <div style="font-size: 12px; height: 4em; overflow: auto;">
          <p>{{lastJunk.description}}</p>
        </div>
        <p class="right-align" style="font-size: 12px;"> {{lastJunk.value}} € </p>
      </div>
    </div>
  </div>
</div>